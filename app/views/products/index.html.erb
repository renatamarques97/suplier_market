<p id="notice"><%= notice %></p>

<h2><%= t(".title") %></h2>

<%= link_to t('.new'), new_product_path, class: 'btn btn-success' %>

<br>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th><%= Product.human_attribute_name :name %></th>
      <th><%= Product.human_attribute_name :description %></th>
      <th><%= t('.dimensions') %></th>
      <th><%= Product.human_attribute_name :weight %></th>
      <th><%= Product.human_attribute_name :quantity %></th>
      <th><%= t('.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.dimensions %></td>
        <td><%= product.weight %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to t('.show'), product, class: 'btn btn-info' %></td>
        <td><%= link_to t('.edit'), edit_product_path(product), class: 'btn btn-warning' %></td>
        <td><%= link_to t('.destroy'), product, method: :delete, data: { confirm: t('.sure?') }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_product_path, class: 'btn btn-success' %>
